<Page x:Class="View.GameOverScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="GameOverScreen" Height="450" Width="800">
    <Page.Resources>

    </Page.Resources>
        <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
            </Grid.RowDefinitions>

        </Grid>
        <Label Name="ResultLabel" Content="{Binding Path=Result}" Grid.Row="0" HorizontalAlignment="Center"/>
        <Label Name="ResultLabe1l" Content="HALLO" Grid.Row="0" HorizontalAlignment="Center"/>
        <Label Name="Winner" Content="{Binding Path=WinnerScore}" Grid.Row="2" HorizontalAlignment="Center"/>
        <Label Name="Loose" Content="{Binding Path=LooserScore}" Grid.Row="3" HorizontalAlignment="Center"/>
        <Button Name="asd" Content="Close" Grid.Row="0" HorizontalAlignment="Center" Width="100" Height="20"/>
    </Grid>
</Page>
